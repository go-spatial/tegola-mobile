<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InstallGpkgActivity">

    <LinearLayout
        android:id="@+id/sect__intall_gpkg__heading"
        style="@style/Section_Heading">

        <RelativeLayout
            style="@style/Section_Heading_Content">

            <ImageButton
                android:id="@+id/btn_install__geopackage_bundle__close"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="bottom"
                android:src="@drawable/ic_clear_black_24dp"
            />

            <TextView
                android:id="@+id/tv_sect_heading_lbl__install_gpkg"
                style="@style/Section_Heading_Content_Label"
                android:layout_alignBottom="@+id/btn_install__geopackage_bundle__close"
                android:layout_alignTop="@+id/btn_install__geopackage_bundle__close"
                android:layout_centerVertical="false"
                android:layout_toLeftOf="@+id/btn_install__geopackage_bundle__close"
                android:layout_toStartOf="@+id/btn_install__geopackage_bundle__close"
                android:text="@string/activity_title__install_gpkg_bundle"
            />
        </RelativeLayout>

        <View
            android:id="@+id/vw_sect_heading_underscore__install_gpkg"
            style="@style/Section_Heading_Underscore"
        />

    </LinearLayout>

    <!-- install gpkg bundle - selection - BEGIN -->
    <LinearLayout
        style="@style/Section_Content">

        <!-- install gpkg bundle - selection - repo container URL: BEGIN -->
        <LinearLayout
            android:id="@+id/sect_content__item__gpkg_bundle_sel__repo_container_url"
            style="@style/Section_Content_Item">

            <TextView
                android:id="@+id/tv_lbl__install_gpkg_bundle__repo_container_url"
                style="@style/Section_Content_Item_Label"
                android:paddingTop="15dp"
                android:text="@string/lbl__install_gpkg_bundle__repo_container_url"
                android:visibility="visible"/>

            <RelativeLayout
                android:id="@+id/gpkg_bundle__repo_container_url__container"
                style="@style/Section_Content_Item_Content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lbl_repo_container_url__http_proto_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="false"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="https://"
                />

                <TextView
                    android:id="@+id/tv_lbl_gpkg_bundle__repo_container_url__root___canon_tail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_lbl_repo_container_url__http_proto_prefix"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/tv_lbl_repo_container_url__http_proto_prefix"
                    android:layout_centerVertical="false"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/fixed__install_gpkg_bundle__repo_container_url__tail"
                    />

                <EditText
                    android:id="@+id/edt_gpkg_bundle__repo_container_url__root"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_lbl_repo_container_url__http_proto_prefix"
                    android:layout_alignTop="@id/tv_lbl_repo_container_url__http_proto_prefix"
                    android:layout_toEndOf="@id/tv_lbl_repo_container_url__http_proto_prefix"
                    android:layout_toLeftOf="@id/tv_lbl_gpkg_bundle__repo_container_url__root___canon_tail"
                    android:layout_toRightOf="@id/tv_lbl_repo_container_url__http_proto_prefix"
                    android:layout_toStartOf="@id/tv_lbl_gpkg_bundle__repo_container_url__root___canon_tail"
                    android:imeOptions="actionDone"
                    android:inputType="textUri"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14sp"/>

            </RelativeLayout>

        </LinearLayout>
        <!-- install gpkg bundle - selection - repo container URL: END -->

        <!-- install gpkg bundle - selection - name: BEGIN -->
        <LinearLayout
            android:id="@+id/sect_content__item__gpkg_bundle_sel__name"
            style="@style/Section_Content_Item"
            android:paddingTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_gpkg_bundle__name__get_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="@string/get_list"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_lbl__install_gpkg_bundle__name"
                    style="@style/Section_Content_Item_Label"
                    android:layout_alignBottom="@id/btn_gpkg_bundle__name__get_list"
                    android:layout_alignTop="@id/btn_gpkg_bundle__name__get_list"
                    android:layout_toLeftOf="@id/btn_gpkg_bundle__name__get_list"
                    android:layout_toStartOf="@id/btn_gpkg_bundle__name__get_list"
                    android:gravity="center_vertical"
                    android:text="@string/lbl__install_gpkg_bundle__name"
                    android:visibility="visible"
                />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gpkg_bundle__name__container"
                style="@style/Section_Content_Item_Content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_gpkg_bundle__name"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:imeOptions="actionDone"
                    android:inputType="textUri"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="14sp"/>

            </RelativeLayout>

        </LinearLayout>
        <!-- install gpkg bundle - selection - name: END -->

        <!-- install gpkg bundle - DO IT button - name: BEGIN -->
        <LinearLayout
            android:id="@+id/sect_content__item__gpkg_bundle__install"
            style="@style/Section_Content_Item"
            android:paddingTop="20dp">

            <RelativeLayout
                style="@style/Section_Content_Item_Content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_gpkg_bundle__install"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:drawableLeft="@drawable/ic_download_black_24dp"
                    android:drawablePadding="5dp"
                    android:text="@string/install"
                />

            </RelativeLayout>

        </LinearLayout>
        <!-- install gpkg bundle - DO IT button - END -->

        <!-- install gpkg bundle - progress - name: BEGIN -->
        <LinearLayout
            android:id="@+id/sect_content__item__install_gpkg_bundle__progress"
            style="@style/Section_Content_Item"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/tv_lbl__install_gpkg_bundle__progress"
                style="@style/Section_Content_Item_Label"
                android:text="@string/Progress"
                android:visibility="visible"
            />

            <RelativeLayout
                style="@style/Section_Content_Item_Content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_lbl__install_gpkg_bundle__progress__toml"
                    style="@style/Section_Content_SubItem_Label"
                    android:text="@string/lbl__install_gpkg_bundle__progress_toml_file"
                    android:visibility="visible"
                />

                <ProgressBar
                    android:id="@+id/pb_toml"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_lbl__install_gpkg_bundle__progress__toml"
                />

                <TextView
                    android:id="@+id/tv_lbl__install_gpkg_bundle__progress__gpkg"
                    style="@style/Section_Content_SubItem_Label"
                    android:text="@string/lbl__install_gpkg_bundle__progress_gpkg_file"
                    android:visibility="visible"
                    android:layout_below="@+id/pb_toml"
                />

                <ProgressBar
                    android:id="@+id/pb_gpkg"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_lbl__install_gpkg_bundle__progress__gpkg"
                />

            </RelativeLayout>

        </LinearLayout>
        <!-- install gpkg bundle - progress - name: END -->

    </LinearLayout>

</LinearLayout>
