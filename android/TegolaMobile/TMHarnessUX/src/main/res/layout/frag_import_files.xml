<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             tools:context="go_spatial.com.github.tegola.mobile.android.bootstrapper.ImportFilesFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_import_files__sdcard"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"

            android:background="@android:color/holo_red_dark"
            android:src="@drawable/ic_sd_card_black_24dp"/>

        <View
            android:id="@+id/vw_vert_div__import_files"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_alignTop="@id/btn_import_files__sdcard"
            android:layout_alignBottom="@id/btn_import_files__sdcard"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/btn_import_files__sdcard"
            android:layout_toEndOf="@id/btn_import_files__sdcard"
            android:background="@android:color/holo_blue_light"/>

        <ImageButton
            android:id="@+id/btn_import_files__cloud"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/vw_vert_div__import_files"
            android:layout_toEndOf="@+id/vw_vert_div__import_files"
            android:layout_alignTop="@id/vw_vert_div__import_files"
            android:layout_alignBottom="@id/vw_vert_div__import_files"
            android:background="@android:color/holo_red_dark"
            android:src="@drawable/ic_cloud_off_black_24dp"/>

    </RelativeLayout>

</FrameLayout>
